[www]
listen = 127.0.0.1:9000
listen.allowed_clients = 127.0.0.1
user = {{ php_fpm_pool_user }}
group = {{ php_fpm_pool_group }}

pm = dynamic
pm.max_children = {{ ansible_processor_vcpus * 10 | int }}
pm.start_servers = {{ ansible_processor_vcpus * 2 | int }}
pm.min_spare_servers = {{ ansible_processor_vcpus | int }}
pm.max_spare_servers = {{ ansible_processor_vcpus * 5 | int }}
pm.max_requests = {{ ansible_processor_vcpus * 1000 | int }}
